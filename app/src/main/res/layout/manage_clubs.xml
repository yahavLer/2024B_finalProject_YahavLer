<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity_clubs_accepted_by_store">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/manage_clubs_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:backgroundTint="@color/colorPrimary"
            android:padding="4dp">
            <TextView
                android:id="@+id/manage_clubs_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Manage Clubs"
                android:textSize="32dp"
                android:background="@color/colorAccent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/manage_clubs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/manage_clubs_view"
            android:layout_above="@id/bottom_navigation"
            android:layout_marginBottom="4dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/clubs_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:layout_centerInParent="true"
                tools:listitem="@layout/club_item_object"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/add_club_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="Add Club"
                    android:backgroundTint="@color/backgroundColor" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/remove_club_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="Remove Club"
                    android:backgroundTint="@color/backgroundColor" />

            </LinearLayout>


        </LinearLayout>

        <FrameLayout
            android:id="@+id/main_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_above="@id/bottom_navigation"
            android:layout_weight="1" />

        <include
            layout="@layout/buttom_menu"
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:labelVisibilityMode="labeled"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
